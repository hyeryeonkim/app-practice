<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.jhs.at.dao.ArticleDao">
	<select id="getForPrintArticles" resultType="Article">
		SELECT *
		FROM article
		WHERE displayStatus = 1
		ORDER BY id DESC
	</select>

	<select id="getForPrintArticle" resultType="Article">
		SELECT *
		FROM article
		WHERE id = ${id}
	</select>

	<insert id="insertStudents" useGeneratedKeys="true"
		resultType="int" keyProperty="id" parameterType="Article">
		INSERT INTO article
		SET regDate = NOW(),
		updateDate = NOW(),
		delDate = "",
		displayStatus = 1,
		title = ${title},
		body=${body}
	</insert>

</mapper>